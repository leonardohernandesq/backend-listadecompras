{
  "compilerOptions": {
    "target": "es2016",                         /* Define a versão do JavaScript para a saída */
    "module": "commonjs",                        /* Define o tipo de módulo a ser gerado */
    "rootDir": "./",                             /* Diretório raiz dos arquivos TypeScript */
    "outDir": "./dist",                          /* Diretório de saída para os arquivos JS compilados */
    "esModuleInterop": true,                     /* Facilita a importação de módulos CommonJS */
    "forceConsistentCasingInFileNames": true,    /* Garante que os nomes de arquivos sejam consistentes */
    "sourceMap": true,                           /* Gera arquivos de mapa de fonte para depuração */
    "removeComments": true,                      /* Remove comentários do código gerado */
    "strict": true,                              /* Ativa todas as opções de verificação estrita */
    "noImplicitAny": false,                      /* Permite o uso de 'any' sem erro */
    "skipLibCheck": true,                        /* Ignora a verificação de tipos em arquivos de definição de bibliotecas */
    "moduleResolution": "node",                  /* Usa a resolução de módulos do Node.js */
    "resolveJsonModule": true                    /* Permite importar arquivos .json como módulos */
  },
  "include": [
    "app.ts",                                    /* Arquivo principal da aplicação */
    "routes/**/*.ts",                            /* Incluir todos os arquivos nas rotas */
    "controllers/**/*.ts"                        /* Incluir todos os arquivos dos controladores */
  ],
  "exclude": [
    "node_modules"                               /* Exclui a pasta node_modules */
  ]
}
